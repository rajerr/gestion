{% extends 'base.html.twig' %}

{% block title %}Liste Patients{% endblock %}

{% block body %}
        {% include "menu.html.twig" %}
<div class="page-wrapper">
    <div class="content">
		<div class="row">
			<div class="col-sm-4 col-3">
				<h4 class="page-title">Liste des Patients</h4>
			</div>
			<div class="col-sm-8 col-9 text-right m-b-20">
				<a href="{{path('patient_create')}}" class="btn btn btn-primary btn-rounded float-right"><i class="fa fa-plus"></i> Ajouter Patient</a>
			</div>
		</div>
		</div>
		<div class="row">
			<div class="col-md-12">
				<div class="table-responsive">
					<table class="table table-border table-striped custom-table mb-0">
						<thead>
							<tr>
								<th>Profile</th>
								<th>Profession</th>
								<th>Nationalit√©</th>
								<th>Genre</th>
								<th>Telephone</th>
								<th>G. Sanguin</th>
								<th>Situation Matrimonniale</th>
								<th>Etat</th>
								<th class="text-right">Action</th>
							</tr>
						</thead>
						<tbody>
				{% for patient in patients %}
							<tr>
								<a href="" class="" href="#" data-toggle="" data-target="">
								<td><img width="28" height="28" src="{{patient.avatar}}" class="rounded-circle m-r-5" alt=""> {{patient.nom}}  {{patient.prenom}}</td>
								<td>{{patient.profession}}</td>
								<td>{{patient.nationalite}}</td>
								<td>{{patient.genre}}</td>
								<td>{{patient.telephone}}</td>
								<td>{{patient.groupeSanguin}}</td>
								<td>{{patient.situationMatrimoniale}}</td>
								<td>{{patient.etat}}</td>
								<td class="text-right">
									<div class="dropdown dropdown-action">
										<a href="#" class="action-icon dropdown-toggle" data-toggle="dropdown" aria-expanded="false"><i class="fa fa-ellipsis-v"></i></a>
										<div class="dropdown-menu dropdown-menu-right">
											<a class="dropdown-item" href="#"><i class="fa fa-pencil m-r-5"></i> Edit</a>
											<a class="dropdown-item" href="#" data-toggle="modal" data-target="#delete_schedule"><i class="fa fa-trash-o m-r-5"></i> Delete</a>
											<a class="dropdown-item" href="{{path('patient')}}"><i class="fa fa-pencil m-r-5"></i> Afficher patient</a>
										</div>
									</div>
								</td>
								</a>

							</tr>
				{% endfor %}
						</tbody>
					</table>
				</div>
		</div>
	</div>
</div>
{% endblock %}
