{% extends 'base.html.twig' %}

{% block title %}Suivi{% endblock %}

{% block body %}
        {% include "menu.html.twig" %}
<div class="page-wrapper">
    <div class="content">
		<div class="row">
			<div class="col-sm-4 col-3">
				<h4 class="page-title">Suivi</h4>
			</div>
			{% if is_granted('ROLE_MEDECIN')%}
			<div class="col-sm-8 col-9 text-right m-b-20">
				<a href="{{path('suivi_create')}}" class="btn btn btn-primary btn-rounded float-right"><i class="fa fa-plus"></i> Enregistrer Suivi</a>
			</div>
            {%  endif %}
		</div>
		</div>
		<div class="row">
			<div class="col-md-12">
				<div class="table-responsive">
					<table class="table table-border table-striped custom-table mb-0">
						<thead>
							<tr>
								<th>Patient</th>
								<th>Consultation</th>
								<th>Libelle</th>
								<th>Date Debut</th>
								<th>Date Retour</th>
								<th>Heure Retour</th>
								<th>Etat</th>
								<th class="text-right">Action</th>
							</tr>
						</thead>
						<tbody>
							{% for suivi in suivis %}
							<tr>
								<td>{{suivi.consultation.patient.nom}} {{suivi.consultation.patient.prenom}}</td>
								<td>{{suivi.consultation.libelle}}</td>
								<td>{{suivi.libelle}} </td>
								<td>{{suivi.dateprise}}</td>
								<td>{{suivi.dateretour}}</td>
								<td>{{suivi.timeretour}}</td>
								<td>{{suivi.etat}}</td>
								<td class="text-right">
									<div class="dropdown dropdown-action">
										<a href="#" class="action-icon dropdown-toggle" data-toggle="dropdown" aria-expanded="false"><i class="fa fa-ellipsis-v"></i></a>
										<div class="dropdown-menu dropdown-menu-right">
											<a class="dropdown-item" href="{{asset('hopital_update')}}"><i class="fa fa-pencil m-r-5"></i> Edit</a>
											<a class="dropdown-item" href="#" data-toggle="modal" data-target="#delete_schedule"><i class="fa fa-trash-o m-r-5"></i> Delete</a>
										</div>
									</div>
								</td>
							</tr>
							{% endfor %}
						</tbody>
					</table>
				</div>
		</div>
	</div>
</div>
{% endblock %}
