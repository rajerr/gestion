{% extends 'base.html.twig' %}

{% block title %}Hopital{% endblock %}

{% block body %}
        {% include "menu.html.twig" %}
<div class="page-wrapper">
    <div class="content">
		<div class="row">
			<div class="col-sm-4 col-3">
				<h4 class="page-title">User</h4>
			</div>
			<div class="col-sm-8 col-9 text-right m-b-20">
				<a href="{{path('user_create')}}" class="btn btn btn-primary btn-rounded float-right"><i class="fa fa-plus"></i> Ajouter User</a>
			</div>
		</div>
		</div>
		<div class="row">
			<div class="col-md-12">
				<div class="table-responsive">
					<table class="table table-border table-striped custom-table mb-0">
						<thead>
							<tr>
								<th>Profile</th>
								<th>Username</th>
								<th>Genre</th>
								<th>Nationalite</th>
								<th>email</th>
								<th>contact</th>
								<th>Profile</th>
								<th>Status</th>
								<th class="text-right">Action</th>
							</tr>
						</thead>
						<tbody>
						{% for user in users %}
							<tr>
								<td><img width="28" height="28" src="{{user.avatar}}" class="rounded-circle m-r-5" alt="">{{user.nom }} {{ user.prenom}}</td>
								<td>{{user.username}}</td>
								<td>{{user.genre}}</td>
								<td>{{user.nationalite}}</td>
								<td>{{user.email}}</td>
								<td>{{user.telephone}}</td>
								<td>{{user.profile.libelle}}</td>
								<td><span class="custom-badge status-green">Active</span></td>
								<td class="text-right">
									<div class="dropdown dropdown-action">
										<a href="#" class="action-icon dropdown-toggle" data-toggle="dropdown" aria-expanded="false"><i class="fa fa-ellipsis-v"></i></a>
										<div class="dropdown-menu dropdown-menu-right">
											<a class="dropdown-item" href="{{asset('hopital_update')}}"><i class="fa fa-pencil m-r-5"></i> Edit</a>
											<a class="dropdown-item" href="#" data-toggle="modal" data-target="#delete_schedule"><i class="fa fa-trash-o m-r-5"></i> Delete</a>
										</div>
									</div>
								</td>
							</tr>
							{% endfor %}
						</tbody>
					</table>
				</div>
		</div>
	</div>
</div>
{% endblock %}
