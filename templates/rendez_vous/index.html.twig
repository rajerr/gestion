{% extends 'base.html.twig' %}

{% block title %}Rendez-Vous{% endblock %}

{% block body %}
        {% include "menu.html.twig" %}
<div class="page-wrapper">
    <div class="content">
		<div class="row">
			<div class="col-sm-4 col-3">
				<h4 class="page-title">Rendez-Vous</h4>
			</div>
			<div class="col-sm-8 col-9 text-right m-b-20">
				<a href="{{path('prescription_patient')}}" class="btn btn btn-primary btn-rounded float-right"><i class="fa fa-pencil"></i> Prescription</a>
                <a href="{{path('consultation_patient')}}" class="btn btn btn-primary btn-rounded float-right"><i class="fa fa-book"></i> Consultations</a>
                <a href="{{path('rendez_vous_patient')}}" class="btn btn btn-primary btn-rounded float-right"><i class="fa fa-calendar"></i> Rendez-vous</a>
				<a href="{{path('rendez_vous_create')}}" class="btn btn btn-primary btn-rounded float-right"><i class="fa fa-plus"></i> Prendre Rendez_vous</a>
			</div>
		</div>
		</div>
		<div class="row">
			<div class="col-md-12">
				<div class="table-responsive">
					<table class="table table-border table-striped custom-table mb-0">
						<thead>
							<tr>
								<th>Hopital</th>
								<th>Libelle</th>
								<th>Date</th>
								<th>Heure</th>
								<th>Message</th>
								<th>User</th>
								<th>Etat</th>
								<th class="text-right">Action</th>
							</tr>
						</thead>
						<tbody>
						{% for rdv in rendezVouses %}
							<tr>
								<td>{{rdv.Hopital.nom}}</td>
								<td>{{rdv.libelle}}</td>
								<td>{{rdv.date}}</td>
								<td>r{{rdv.heure}}</td>
								<td>{{rdv.message}}</td>
								<td>{{rdv.user.nom}} {{rdv.user.prenom}}</td>
								<td>{{rdv.etat}}</td>
								<td class="text-right">
									<div class="dropdown dropdown-action">
										<a href="#" class="action-icon dropdown-toggle" data-toggle="dropdown" aria-expanded="false"><i class="fa fa-ellipsis-v"></i></a>
										<div class="dropdown-menu dropdown-menu-right">
											<a class="dropdown-item" href="{{asset('hopital_update')}}"><i class="fa fa-pencil m-r-5"></i> Edit</a>
											<a class="dropdown-item" href="#" data-toggle="modal" data-target="#delete_schedule"><i class="fa fa-trash-o m-r-5"></i> Delete</a>
										</div>
									</div>
								</td>
							</tr>
							{% endfor %}
						</tbody>
					</table>
				</div>
		</div>
	</div>
</div>
{% endblock %}
