{% extends 'base.html.twig' %}

{% block title %}Consultations{% endblock %}

{% block body %}
        {% include "menu.html.twig" %}
<div class="page-wrapper">
    <div class="content">
		<div class="row">
			<div class="col-sm-4 col-3">
				<h4 class="page-title">Consultations</h4>
			</div>
            {% if is_granted('ROLE_MEDECIN') %}
			<div class="col-sm-8 col-9 text-right m-b-20">
                <a href="{{path('prescription_patient')}}" class="btn btn btn-primary btn-rounded float-right"><i class="fa fa-pencil"></i> Prescription</a>
                <a href="{{path('consultation_patient')}}" class="btn btn btn-primary btn-rounded float-right"><i class="fa fa-book"></i> Consultations</a>
                <a href="{{path('rendez_vous_patient')}}" class="btn btn btn-primary btn-rounded float-right"><i class="fa fa-calendar"></i> Rendez-vous</a>
				<a href="{{path('consultation_create')}}" class="btn btn btn-primary btn-rounded float-right"><i class="fa fa-plus"></i> Ajouter Consultation</a>
			</div>
			{% endif %}
		</div>
		</div>
		<div class="row">
			<div class="col-md-12">
				<div class="table-responsive">
					<table class="table table-border table-striped custom-table mb-0">
						<thead>
							<tr>
								<th>Patient</th>
								<th>Libelle</th>
								<th>Poids</th>
								<th>Temperature</th>
								<th>Tension</th>
								<th>Diagnostique</th>
								<th>Medecin</th>
								<th class="text-right">Action</th>
							</tr>
						</thead>
						<tbody>
							{% for consultation in consultations %}
							<tr>
								<td><img width="28" height="28" src="{{consultation.patient.avatar}}" class="rounded-circle m-r-5" alt=""> {{consultation.patient.nom}} {{consultation.patient.prenom}}</td>
								<td>{{consultation.libelle}}</td>
								<td>{{consultation.poids}}</td>
								<td>{{consultation.temperature}}</td>
								<td>{{consultation.tension}}</td>
								<td>{{consultation.diagnostique}}</td>
								<td>{{consultation.medecin.nom}} {{consultation.medecin.prenom}}</td>
								<td class="text-right">
									<div class="dropdown dropdown-action">
										<a href="#" class="action-icon dropdown-toggle" data-toggle="dropdown" aria-expanded="false"><i class="fa fa-ellipsis-v"></i></a>
										<div class="dropdown-menu dropdown-menu-right">
											<a class="dropdown-item" href="{{asset('hopital_update')}}"><i class="fa fa-pencil m-r-5"></i> Edit</a>
											<a class="dropdown-item" href="#" data-toggle="modal" data-target="#delete_schedule"><i class="fa fa-trash-o m-r-5"></i> Delete</a>
										</div>
									</div>
								</td>
							</tr>
							{% endfor %}
						</tbody>
					</table>
				</div>
		</div>
	</div>
</div>
{% endblock %}
