{% extends 'base.html.twig' %}

{% block title %}Hopital{% endblock %}

{% block body %}
    {% include "menu.html.twig" %}
</div>
<div class="page-wrapper">
    <div class="content">
		<div class="row">
			<div class="col-sm-4 col-3">
				<h4 class="page-title">Hopital</h4>
			</div>
			<div class="col-sm-8 col-9 text-right m-b-20">
				<a href="{{path('hopital_create')}}" class="btn btn btn-primary btn-rounded float-right"><i class="fa fa-plus"></i> Ajouter Hopital</a>
			</div>
		</div>
		</div>
		<div class="row">
			<div class="col-md-12">
				<div class="table-responsive">
					<table class="table table-border table-striped custom-table mb-0" id="tab">
						<thead>
							<tr>
								<th>users Name</th>
								<th>Logo</th>
								<th>nom</th>
								<th>email</th>
								<th>adresse</th>
								<th>contact</th>
								<th>Ville</th>
								<th class="text-right">Action</th>
							</tr>
						</thead>
						<tbody>
							{% for hopital in hopitals %}
								<tr>
									<td>{{hopital.user.nom   }} {{    hopital.user.prenom}}</td>
									<td><img width="28" height="28" src="data:logo/png;base64,{{(hopital.logo) }}" class="rounded-circle m-r-5" alt="Logo"></td>
									<td>{{hopital.nom}}</td>
									<td>{{hopital.email}}</td>
									<td>{{hopital.adresse}}</td>
									<td>{{hopital.contact}}</td>
									<td>{{hopital.ville}}</td>
									<td class="text-right">
										<div class="dropdown dropdown-action">
											<a href="#" class="action-icon dropdown-toggle" data-toggle="dropdown" aria-expanded="false"><i class="fa fa-ellipsis-v"></i></a>
											<div class="dropdown-menu dropdown-menu-right">
												<a class="dropdown-item" href="{{asset('hopital_update')}}"><i class="fa fa-pencil m-r-5"></i> Edit</a>
												<a class="dropdown-item" href="#" data-toggle="modal" data-target="#delete_schedule"><i class="fa fa-trash-o m-r-5"></i> Delete</a>
											</div>
										</div>
									</td>
								</tr>
							{% endfor %}
						</tbody>
					</table>
				</div>
		</div>
	</div>
</div>
{% block javascripts %}
<script type = "text / javascript" src = "https://cdn.datatables.net/v/dt/jq-3.2.1/dt-1.10.16/datatables.min.js"> </script>
<script src="{{ asset('js/datatable.js') }}"></script>
{% endblock %}
{% endblock %}
