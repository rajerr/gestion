{% extends 'base.html.twig' %}

{% block title %}Hopital{% endblock %}

{% block body %}
        {% include "menu.html.twig" %}
<div class="page-wrapper">
            <div class="content">
                <div class="row">
                    <div class="col-sm-4 col-3">
                        <h4 class="page-title">Medecin</h4>
                    </div>
                    <div class="col-sm-8 col-9 text-right m-b-20">
                        <a href="{{path('medecin_create')}}" class="btn btn-primary btn-rounded float-right"><i class="fa fa-plus"></i> Ajouter Medecin</a>
                    </div>
                </div>
				{% for medecin in medecins %}
				<div class="row doctor-grid ">
                    <div class="col-md-4 col-sm-4  col-lg-3 ">
                        <div class="profile-widget border border-info">
                            <div class="doctor-img">
                                <a class="avatar" href=""><img alt="" src="{{medecin.avatar}}"></a>
                            </div>
                            <div class="dropdown profile-action">
                                <a href="#" class="action-icon dropdown-toggle" data-toggle="dropdown" aria-expanded="false"><i class="fa fa-ellipsis-v"></i></a>
                                <div class="dropdown-menu dropdown-menu-right">
                                    <a class="dropdown-item" href="#"><i class="fa fa-pencil m-r-5"></i> Edit</a>
                                    <a class="dropdown-item" href="#" data-toggle="modal" data-target="#delete_doctor"><i class="fa fa-trash-o m-r-5"></i> Delete</a>
                                </div>
                            </div>
                            <h4 class="doctor-name text-ellipsis"><a href="">{{medecin.nom}}  {{medecin.prenom}} </a></h4>
                            <div class="doc-prof">{{medecin.specialite}}</div>
                            <div class="user-country">
                                <i class="fa fa-map-marker"></i> {{medecin.nationalite}} 
                            </div>
                        </div>
                    </div>
                </div>
                {% endfor %}

            </div>
        </div>
{% endblock %}
